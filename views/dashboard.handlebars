<section>

  <h2 class="has-text-weight-bold is-size-4">Update your info</h2>


  <form class="new-post-form">
    <div>
      <label for="bio">Bio</label>
      <textarea rows="10" cols="50" id="post-title" name="bio">{{bio}}</textarea>
    </div>
    <div>
      <label for="social">Social</label>
      <input id="post-url" name="social" />
    </div>

    <button type="submit" class="btn, button is-warning is-rounded">Update</button>

  </form>
</section>

